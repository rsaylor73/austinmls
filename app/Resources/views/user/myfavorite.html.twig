{% extends 'base.html.twig' %}
{% block header %}
	{% include('header.html.twig') %}
{% endblock %}

{% block body %}

	<div class="row top-buffer">
		<div class="col-sm-12">
			<h3>My Favorites</h3>
		</div>
	</div>
	{% include('flash-messages.html.twig') %}

	<div class="row top-buffer">
		<div class="col-sm-8">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>List Price</th>
						<th>Address</th>
						<th>&nbsp;</th>
					</tr>
				</thead>
				<tbody>
				{% for d in data %}
					<tr>
						<td>$ {{d.ListPrice|number_format(2, '.', ',')}}</td>
						<td>{{d.Address}} , {{d.City}} {{d.StateOrProvince}}, {{d.PostalCode}}</td>
						<td>
							<input type="button" value="View" class="btn btn-primary"
							onclick="document.location.href='{{path('details',{'id': d.Matrix_Unique_ID})}}'">&nbsp;
							<input type="button" value="Delete" class="btn btn-warning"
							onclick="if(confirm('You are about to delete {{d.Address}} from your list. Click OK to continue.')) { document.location.href='{{ path('deletefavorite', {'Matrix_Unique_ID': d.Matrix_Unique_ID})}}'}">
						</td>
					</tr>
				{% endfor %}
				{% if data == "" %}
				<tr><td colspan="3"><font color="blue">There are no properties in your favorites.</font></td></tr>
				{% endif %}
				</tbody>
			</table>
		</div>




<br><br><br><br><br><br>

{% endblock %}

{% block footer %}
	{% include('footer.html.twig') %}
{% endblock %}	