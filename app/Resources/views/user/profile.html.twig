{% extends 'base.html.twig' %}
{% block header %}
	{% include('header.html.twig') %}
{% endblock %}

{% block body %}

<div class="container">
	<div class="row top-buffer">
		<div class="col-sm-12">
			<h3>Profile</h3>
		</div>
	</div>
	{% include('flash-messages.html.twig') %}
	<form action="{{path('saveupdateprofile')}}" method="post">
	<div class="row top-buffer">
		<div class="col-sm-2">First Name:</div>
		<div class="col-sm-4">
			<input type="text" name="first" value="{{data.first}}" class="form-control">
		</div>
	</div>

	<div class="row top-buffer">
		<div class="col-sm-2">Last Name:</div>
		<div class="col-sm-4">
			<input type="text" name="last" value="{{data.last}}" class="form-control">
		</div>
	</div>

	<div class="row top-buffer">
		<div class="col-sm-2">Email:</div>
		<div class="col-sm-4">
			<input type="text" name="email" value="{{data.email}}" class="form-control">
		</div>
	</div>

	<div class="row top-buffer">
		<div class="col-sm-2">Phone:</div>
		<div class="col-sm-4">
			<input type="text" name="phone" value="{{data.phone}}" class="form-control">
		</div>
	</div>

	<div class="row top-buffer">
		<div class="col-sm-2">New Password:</div>
		<div class="col-sm-4">
			<input type="password" name="password" placeholder="Enter new password (optional)" class="form-control">
		</div>
	</div>

	<div class="row top-buffer">
		<div class="col-sm-4">
			<input type="submit" value="Save" class="btn btn-success">&nbsp;
			<input type="button" value="Cancel" class="btn btn-warning" onclick="document.location.href='{{path('dashboard')}}'">
		</div>
	</div>
	</form>
</div>


<br><br><br><br><br><br>

{% endblock %}

{% block footer %}
	{% include('footer.html.twig') %}
{% endblock %}	