{% extends 'base.html.twig' %}
{% block header %}
	{% include('header.html.twig') %}
{% endblock %}

{% block body %}

	{% set userType = app.session.get('userType') %}

	<form action="{{path('updateuser')}}" method="post">
	<input type="hidden" name="id" value="{{data.id}}">
	<div class="row top-buffer">
		<div class="col-sm-12">
			<h3>Edit User</h3>
		</div>
	</div>

	<div class="row top-buffer">
		<div class="col-sm-2">First Name:</div>
		<div class="col-sm-3">
			<input type="text" name="first" value="{{data.first}}" class="form-control">
		</div>

		<div class="col-sm-2">Last Name:</div>
		<div class="col-sm-3">
			<input type="text" name="last" value="{{data.last}}" class="form-control">
		</div>
	</div>

	<div class="row top-buffer">
		<div class="col-sm-2">Phone:</div>
		<div class="col-sm-3">
			<input type="text" name="phone" value="{{data.phone}}" class="form-control">
		</div>

		<div class="col-sm-2">Email:</div>
		<div class="col-sm-3">
			<input type="text" name="email" value="{{data.email}}" class="form-control">
		</div>
	</div>

	<div class="row top-buffer">
		<div class="col-sm-2">Account Type:</div>
		<div class="col-sm-3">
			<select name="userType" class="form-control">
				<option selected value="{{data.userType}}">{{data.userType}} (Default)</option>
				<option>user</option>
				<option>admin</option>
			</select>
		</div>
		<div class="col-sm-2">Active:</div>
		<div class="col-sm-3">
			<select name="active" class="form-control">
				<option selected value="{{data.active}}">{{data.active}} (Default)</option>
				<option>Yes</option>
				<option>No</option>
			</select>
		</div>
	</div>

	<div class="row top-buffer">
		<div class="col-sm-2">Date Registered:</div>
		<div class="col-sm-2">{{data.date}}</div>
	</div>

	<div class="row top-buffer">
		<div class="col-sm-8">
			<input type="submit" value="Update" class="btn btn-success">&nbsp;
			<input type="button" value="Cancel" class="btn btn-warning" onclick="document.location.href='{{path('users')}}'">
		</div>
	</div>
	</form>



{% endblock %}

{% block footer %}
	{% include('footer.html.twig') %}
{% endblock %}