{% extends 'base.html.twig' %}
{% block header %}
	{% include('header.html.twig') %}
{% endblock %}

{% block body %}

	{% include('flash-messages.html.twig') %}

	<div class="row top-buffer">
		<div class="col-sm-12">
			<h3>Manage Favorites</h3>
		</div>
	</div>
  
	<div class="row top-buffer">
		<div class="col-sm-12">
			<table class="table table-striped" id="myTable">
				<thead>
					<th>User</th>
					<th>Date Added</th>
					<th>Property</th>
					<th>Actions</th>
				</thead>
				<tbody>
				{% for d in data %}
				<tr>
					<td><a href="mailto:{{d.email}}">{{d.first}} {{d.last}}</a></td>
					<td>{{d.date}}</td>
					<td><a href="{{path('details', {'id': d.Matrix_Unique_ID})}}">{{d.Address}}, {{d.City}}, {{d.StateOrProvince}}</a></td>
					<td>
						<input type="text" value="Delete" class="btn btn-warning" onclick="if(confirm('You are about to delete {{d.Address}}, {{d.City}}, {{d.StateOrProvince}}. Click OK to continue.')) { document.location.href=' {{path('admindeletefavorite', {'id': d.id } )}}   '}">
					</td>
				</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
	</div>


<br><br><br><br><br><br>

<script>
$(document).ready(function(){
    $('#myTable').DataTable({
      "aaSorting": []
    });
});
</script>


{% endblock %}

{% block footer %}
	{% include('footer.html.twig') %}
{% endblock %}